<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MentorInfoFragment">
<!--<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_baseline_chevron_left_24"-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mentor_info_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/mentor_info_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Developer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/mentor_info_profile_image"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/mentor_info_full_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android 23,4-month"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintTop_toBottomOf="@id/mentor_info_fullName"
        app:layout_constraintStart_toStartOf="@id/mentor_info_fullName"
        android:layout_marginTop="5dp"/>
    <View
        android:id="@+id/view_bottom_image"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/mentor_info_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/request_type_mentor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_bottom_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:text="Тип Запроса"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/type_mentor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сходим пообедать"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/request_type_mentor_info"
        app:layout_constraintStart_toStartOf="@id/request_type_mentor_info"/>
    <View
        android:id="@+id/view_bottom_request_type"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/type_mentor_info"
        android:background="@color/black"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/students_problem_student_mentor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Проблема "
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/view_bottom_request_type"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/problem_description_mentor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="не понимаю recycler"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/students_problem_student_mentor_info"
        app:layout_constraintStart_toStartOf="@id/students_problem_student_mentor_info"/>
    <TextView
        android:id="@+id/problem_description_type_mentor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание проблемы "
        app:layout_constraintTop_toBottomOf="@id/problem_description_mentor_info"
        app:layout_constraintStart_toStartOf="@id/problem_description_mentor_info"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_problem_desc_type_mentor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кому то взять или давайте вместе сходим"
        app:layout_constraintTop_toBottomOf="@id/problem_description_type_mentor_info"
        app:layout_constraintStart_toStartOf="@id/problem_description_type_mentor_info"/>
    <TextView
        android:id="@+id/problem_foto_mentor_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фото"
        app:layout_constraintTop_toBottomOf="@id/tv_problem_desc_type_mentor_info"
        app:layout_constraintStart_toStartOf="@id/tv_problem_desc_type_mentor_info"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/image_problem_photo_first"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/problem_foto_mentor_info_tv"
        app:layout_constraintStart_toStartOf="@id/problem_foto_mentor_info_tv"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_launcher_round"/>
    <ImageView
        android:id="@+id/image_problem_photo_second"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/problem_foto_mentor_info_tv"
        app:layout_constraintStart_toEndOf="@id/image_problem_photo_first"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"/>
     <TextView
         android:id="@+id/for_help"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="За помощь"
         android:textColor="@color/black"
         app:layout_constraintTop_toBottomOf="@id/image_problem_photo_first"
         app:layout_constraintStart_toStartOf="@id/image_problem_photo_first"
         android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/for_help_one_geekCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 GeekCoin"
        app:layout_constraintTop_toBottomOf="@id/for_help"
        app:layout_constraintStart_toStartOf="@id/for_help"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/in_chats_mentor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В чат"
        android:textColor="@color/white"
        android:background="@drawable/bg_button"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/btn_end_up_mentor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Завершить"
        android:textAllCaps="false"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button_profile"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>